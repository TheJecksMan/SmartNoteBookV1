<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview_attachments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="188dp"
        android:background="@null"
        android:padding="8dp"
        android:text="@string/NotesAddImage"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:visibility="invisible" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="176dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:drawingCacheQuality="low"
        android:elevation="16dp"
        android:focusable="true"
        android:src="@drawable/ic_outline_image_24"
        android:visibility="invisible"
        app:backgroundTint="@color/white"
        app:pressedTranslationZ="12dp" />

    <TextView
        android:id="@+id/textview_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="118dp"
        android:background="@null"
        android:padding="8dp"
        android:text="@string/NoteAddTask"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:visibility="invisible" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="108dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:drawingCacheQuality="low"
        android:elevation="16dp"
        android:focusable="true"
        android:visibility="invisible"
        app:backgroundTint="@color/white"
        app:pressedTranslationZ="12dp"
        app:srcCompat="@drawable/ic_outline_edit_note" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:drawingCacheQuality="low"
        android:elevation="16dp"
        android:focusable="true"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:pressedTranslationZ="12dp"
        app:srcCompat="@drawable/ic_outline_add" />

</RelativeLayout>