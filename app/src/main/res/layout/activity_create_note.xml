<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/NotesToolbarUp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainMenu"
    android:focusableInTouchMode="true"
    tools:context=".CreateNote">


    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/viewEditMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewUpPanel">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/textLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTextNotes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@color/MainMenu"
                android:ems="10"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="top"
                android:hint="@string/textViewNotes"
                android:importantForAutofill="no"
                android:inputType="textMultiLine|textNoSuggestions|textPersonName"
                android:padding="10dp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextHeadText" />

            <TextView
                android:id="@+id/lastModifiedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.833"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextNotes"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/editTextHeadText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@null"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="top"
                android:hint="@string/textViewHead"
                android:importantForAutofill="no"
                android:inputType="textMultiLine|textNoSuggestions|textPersonName"
                android:padding="10dp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:textColorHint="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <View
        android:id="@+id/viewUpPanel"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewEditMenu"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="53dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:background="#00FFFFFF"
        android:drawableRight="@drawable/ic_outline_color_lens_24"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/viewEditMenu"
        app:layout_constraintStart_toStartOf="@+id/viewEditMenu"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3"
        app:layout_constraintVertical_bias="1.0"
        tools:visibility="gone" />

    <Button
        android:id="@+id/button5"
        android:layout_width="53dp"
        android:layout_height="0dp"
        android:background="#00FFFFFF"
        android:drawableRight="@drawable/ic_outline_title_24"
        android:text="Button"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="gone" />

    <Button
        android:id="@+id/button6"
        android:layout_width="53dp"
        android:layout_height="0dp"
        android:layout_marginEnd="32dp"
        android:background="#00FFFFFF"
        android:drawableRight="@drawable/ic_outline_settings"
        android:text="Button"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/viewEditMenu"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3"
        app:layout_constraintVertical_bias="1.0"
        tools:visibility="gone" />

    <Button
        android:id="@+id/NotesButtonMenu"
        android:layout_width="50dp"
        android:layout_height="43dp"
        android:layout_marginBottom="8dp"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/notes_outline_more_vert"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="@+id/viewUpPanel"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="@+id/viewUpPanel"
        app:layout_constraintTop_toTopOf="@+id/viewUpPanel"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/BackToNote"
        android:layout_width="49dp"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/notes_outline_arrow_back"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="@+id/viewUpPanel"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="@+id/viewUpPanel"
        app:layout_constraintTop_toTopOf="@+id/viewUpPanel"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>