<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">
    
    <RelativeLayout
        android:id="@+id/containerList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawingCacheQuality="low"
        android:paddingBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/imageViewDragAndDrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="10dp"
            android:drawingCacheQuality="low"
            app:srcCompat="@drawable/main_outline_menu" />

        <EditText
            android:id="@+id/BodyList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/imageViewDragAndDrop"
            android:layout_toEndOf="@+id/checkBoxList"
            android:background="@null"
            android:ellipsize="end"
            android:ems="10"
            android:focusable="true"
            android:hint="@string/NotesNewTask"
            android:inputType="textAutoCorrect|textMultiLine|textNoSuggestions|textPersonName"
            android:maxLength="100"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkBoxList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:drawingCacheQuality="low" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>